#include <iostream>
using namespace std;

class Stack {
    int *arr, top, capacity;
public:
    Stack(int n){
        capacity=n; top=-1; arr=new int[n];
    }
    bool isEmpty(){ return top==-1; }
    bool isFull(){ return top==capacity-1; }
    void push(int x){
        if(isFull()) cout<<"Stack Overflow\n";
        else arr[++top]=x;
    }
    void pop(){
        if(isEmpty()) cout<<"Stack Underflow\n";
        else cout<<"Popped: "<<arr[top--]<<"\n";
    }
    void peek(){
        if(isEmpty()) cout<<"Empty\n";
        else cout<<"Top element: "<<arr[top]<<"\n";
    }
    void display(){
        if(isEmpty()){ cout<<"Empty\n"; return; }
        cout<<"Stack(top->bottom): ";
        for(int i=top;i>=0;--i) cout<<arr[i]<<" ";
        cout<<"\n";
    }
};

int main(){
    Stack st(5); // capacity = 5
    st.push(10); st.push(20); st.push(30);
    st.display();      // Stack(top->bottom): 30 20 10
    st.peek();         // Top element: 30
    st.pop();          // Popped: 30
    st.display();      // Stack(top->bottom): 20 10
    return 0;
}
/*Stack(top->bottom): 30 20 10
Top element: 30
Popped: 30
Stack(top->bottom): 20 10
*/
